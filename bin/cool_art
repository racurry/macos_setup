#!/usr/bin/env ruby
require_relative '../lib/terminal_helpers.rb'

# Artworks solen liberally from https://asciiart.website

def croc
croc = <<-CROC
                _ ___                /^^\\ /^\\  /^^\\_
    _          _@)@) \\            ,,/ '` ~ `'~~ ', `\\.
  _/o\\_ _ _ _/~`.`...'~\\        ./~~..,'`','',.,' '  ~:
 / `,'.~,~.~  .   , . , ~|,   ,/ .,' , ,. .. ,,.   `,  ~\\_
( ' _' _ '_` _  '  .    , `\\_/ .' ..' '  `  `   `..  `,   \\_
 ~V~ V~ V~ V~ ~\\ `   ' .  '    , ' .,.,''`.,.''`.,.``. ',   \\_
  _/\\ /\\ /\\ /\\_/, . ' ,   `_/~\\_ .' .,. ,, , _/~\\_ `. `. '.,  \\_
 < ~ ~ '~`'~'`, .,  .   `_: ::: \\_ '      `_/ ::: \\_ `.,' . ',  \\_
  \\ ' `_  '`_    _    ',/ _::_::_ \\ _    _/ _::_::_ \\   `.,'.,`., \\-,-,-,_,_,
   `'~~ `'~~ `'~~ `'~~  \\(_)(_)(_)/  `~~' \\(_)(_)(_)/ ~'`\\_.._,._,'_;_;_;_;_;
CROC
end


def croc2
croc = <<-CROC
                         .--.  .--.
                      /    \\/    \\
                     /   .-.  .-. |
                    /   |  _\\|  _\\|
              .----'    |/` ||/` ||
            _/    ,--    \\_0/ \\_0/|
         .-'     / `)              \\       .-""""""--.
        /          /              .-'-----/           \\
       /          /`\\                          () ()  /
      /          |   '-.___.                          |
     ;           \\      |/ `\\                         /
    /             |.---.`.-. '.___              ___.-'
  /'              |     \\   \\ \\ |/`'-.,____..-``|/
                  \\  ,   \\   \\ \\`,       |/     `
                   \\/|    \\   \\ /|       `
                    \\/     `   ;-`'.   ,
                     `'-.   ,   '.  '-/|    ,
                         './|     '-. ``;--/|-.
                           '`'--.,___) /|.-'"` )
                      '--._          `"`    .-'
                         .-`'-._          .'
                       .'       ``''---''`
CROC
end


def print_it
  which_croc = [:croc,:croc2].sample
  pputs send(which_croc), color: :green
end

print_it
