{
  "workbench.startupEditor": "none",
  "git.openRepositoryInParentFolders": "never",
  "explorer.confirmDelete": false,
  "geminicodeassist.project": "galileo-gemini-coding-assist",
  "github.copilot.nextEditSuggestions.enabled": true,
  "explorer.confirmDragAndDrop": false,
  "security.workspace.trust.untrustedFiles": "open",
  "explorer.confirmPasteNative": false,
  "git.blame.editorDecoration.enabled": true,
  "chatgpt.authenticationType": "apiKey",
  "chatgpt.apiKey": "${env:OPENAI_API_KEY}",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.accessibilitySupport": "off",
  "window.confirmSaveUntitledWorkspace": false,
  "markdownlint.configFile": "~/.markdownlint-cli2.jsonc",
  "geminicodeassist.displayInlineContextHint": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "editor.formatOnSave": true,
  "workbench.settings.applyToAllProfiles": [
    "python.defaultInterpreterPath",
    "editor.tabCompletion"
  ],
  "settingsSync.ignoredSettings": [
    "-python.defaultInterpreterPath"
  ],
  "editor.formatOnPaste": true,
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "claudeCode.preferredLocation": "sidebar",
  "chatgpt.runCodexInWindowsSubsystemForLinux": true,
  "editor.tabCompletion": "on",
  "[markdown]": {
    "editor.tabSize": 2
  }
}
