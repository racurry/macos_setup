{
  "Code Block": {
    "prefix": "code",
    "body": ["```${1|bash,python,typescript,javascript,json,yaml,sql,go,rust,shell|}", "$0", "```"],
    "description": "Fenced code block with language"
  },
  "Code Block Plain": {
    "prefix": "codep",
    "body": ["```", "$0", "```"],
    "description": "Fenced code block without language"
  },
  "Inline Code": {
    "prefix": "ic",
    "body": "`$1`$0",
    "description": "Inline code"
  },
  "Bold": {
    "prefix": "b",
    "body": "**${1:text}**$0",
    "description": "Bold text"
  },
  "Italic": {
    "prefix": "i",
    "body": "*${1:text}*$0",
    "description": "Italic text"
  },
  "Link": {
    "prefix": "link",
    "body": "[${1:text}](${2:url})$0",
    "description": "Markdown link"
  },
  "Link with Clipboard": {
    "prefix": "linkc",
    "body": "[${1:text}](${CLIPBOARD})$0",
    "description": "Link with URL from clipboard"
  },
  "Image": {
    "prefix": "img",
    "body": "![${1:alt}](${2:url})$0",
    "description": "Image"
  },
  "Reference Link": {
    "prefix": "linkref",
    "body": "[${1:text}][${2:ref}]\n\n[${2:ref}]: ${3:url}",
    "description": "Reference-style link"
  },
  "Table 2 Columns": {
    "prefix": "table2",
    "body": ["| ${1:Header 1} | ${2:Header 2} |", "|---|---|", "| $3 | $4 |", "$0"],
    "description": "2-column table"
  },
  "Table 3 Columns": {
    "prefix": "table3",
    "body": ["| ${1:Header 1} | ${2:Header 2} | ${3:Header 3} |", "|---|---|---|", "| $4 | $5 | $6 |", "$0"],
    "description": "3-column table"
  },
  "Table Row": {
    "prefix": "tr",
    "body": "| $1 | $2 |$0",
    "description": "Table row"
  },
  "Checkbox": {
    "prefix": "cb",
    "body": "- [ ] $0",
    "description": "Checkbox (unchecked)"
  },
  "Checkbox Checked": {
    "prefix": "cbc",
    "body": "- [x] $0",
    "description": "Checkbox (checked)"
  },
  "Task List": {
    "prefix": "tasks",
    "body": ["- [ ] ${1:Task 1}", "- [ ] ${2:Task 2}", "- [ ] ${3:Task 3}", "$0"],
    "description": "Task list"
  },
  "Blockquote": {
    "prefix": "quote",
    "body": "> ${1:quote}$0",
    "description": "Blockquote"
  },
  "Callout Note": {
    "prefix": "note",
    "body": ["> [!NOTE]", "> $0"],
    "description": "GitHub callout - Note"
  },
  "Callout Warning": {
    "prefix": "warn",
    "body": ["> [!WARNING]", "> $0"],
    "description": "GitHub callout - Warning"
  },
  "Callout Important": {
    "prefix": "important",
    "body": ["> [!IMPORTANT]", "> $0"],
    "description": "GitHub callout - Important"
  },
  "Callout Tip": {
    "prefix": "tip",
    "body": ["> [!TIP]", "> $0"],
    "description": "GitHub callout - Tip"
  },
  "Callout Caution": {
    "prefix": "caution",
    "body": ["> [!CAUTION]", "> $0"],
    "description": "GitHub callout - Caution"
  },
  "Collapsible Section": {
    "prefix": "details",
    "body": ["<details>", "<summary>${1:Click to expand}</summary>", "", "$0", "", "</details>"],
    "description": "Collapsible details section"
  },
  "Horizontal Rule": {
    "prefix": "hr",
    "body": "---",
    "description": "Horizontal rule"
  },
  "Header 1": {
    "prefix": "h1",
    "body": "# ${1:${TM_FILENAME_BASE}}",
    "description": "H1 with filename default"
  },
  "Header 2": {
    "prefix": "h2",
    "body": "## $0",
    "description": "H2"
  },
  "Header 3": {
    "prefix": "h3",
    "body": "### $0",
    "description": "H3"
  },
  "Frontmatter": {
    "prefix": "front",
    "body": ["---", "title: ${1:${TM_FILENAME_BASE}}", "date: ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}", "---", "", "$0"],
    "description": "YAML frontmatter"
  },
  "TODO": {
    "prefix": "todo",
    "body": "<!-- TODO: $0 -->",
    "description": "TODO comment"
  },
  "Comment": {
    "prefix": "comment",
    "body": "<!-- $0 -->",
    "description": "HTML comment"
  },
  "Badge": {
    "prefix": "badge",
    "body": "[![${1:alt}](${2:https://img.shields.io/badge/${3:label}-${4:message}-${5:color}})](${6:url})",
    "description": "Shield.io badge with link"
  },
  "Definition List": {
    "prefix": "def",
    "body": ["${1:Term}", ": ${2:Definition}", "$0"],
    "description": "Definition list item"
  },
  "Footnote": {
    "prefix": "fn",
    "body": "[^${1:id}]\n\n[^${1:id}]: ${2:Footnote text}",
    "description": "Footnote"
  }
}
